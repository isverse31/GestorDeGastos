<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7B9C1B"
    tools:context=".AgregarIngresos"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center">

        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="Añadir Movimiento"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="570dp"
        android:orientation="vertical"
        android:background="@drawable/fondo1"
        >

        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="160dp"
                android:layout_height="42dp"
                android:text="Gastos"
                android:onClick="AgregarGasto"
                android:textSize="26sp"
                tools:layout_editor_absoluteX="33dp"
                tools:layout_editor_absoluteY="271dp" />

            <TextView
                android:layout_width="101dp"
                android:layout_height="35dp"
                android:text="Ingresos"
                android:onClick="AgregarIngreso"
                android:textSize="26sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="335dp"
            android:layout_height="130dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/CantidadMovimiento"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:hint="$0"
                android:ems="10"
                android:gravity="center"
                android:inputType="number" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="MXN"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="90dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="¿En qué se va a Gastar?"
                android:textSize="22sp"/>
        </LinearLayout>
        <Spinner
            android:id="@+id/spinnerImage"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="3dp"
            android:prompt="@string/select_image_prompt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>
        <EditText
            android:id="@+id/descriptionEditText"
            android:layout_width="300dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="89dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:onClick="BotonAgregarIngreso"
            android:text="Button" />

    </LinearLayout>



</LinearLayout>