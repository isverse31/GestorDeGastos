<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4CAF50"
    android:backgroundTint="#7B9C1B"
    android:orientation="vertical"
    tools:context=".CrearCuenta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="300dp"
            android:layout_height="26dp"
            android:layout_marginBottom="16dp"
            android:text="Escribe tu Correo"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/Correo2"
            tools:layout_editor_absoluteX="65dp" />

        <EditText
            android:id="@+id/Correo2"
            android:layout_width="287dp"
            android:layout_height="47dp"
            android:ems="10"
            android:textColor="@color/black"
            android:background="@drawable/rounded"
            android:hint="ejemplo: reyes@gmail.com"
            android:inputType="textEmailAddress"
            android:scrollbarDefaultDelayBeforeFade="300"
            android:scrollbarFadeDuration="200"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="141dp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="26dp"
            android:layout_marginBottom="18dp"
            android:text="Contraseña"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/Contrasenia2"
            tools:layout_editor_absoluteX="60dp" />


        <EditText
            android:id="@+id/Contrasenia2"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:ems="10"
            android:textColor="@color/black"
            android:background="@drawable/rounded"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="296dp" />


        <TextView
            android:layout_width="300dp"
            android:layout_height="26dp"
            android:layout_marginBottom="24dp"
            android:text="Confirmar Contraseña"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/Contrasenia3"
            tools:layout_editor_absoluteX="58dp" />

        <EditText
            android:id="@+id/Contrasenia3"
            android:layout_width="287dp"
            android:layout_height="53dp"
            android:ems="10"
            android:textColor="@color/black"
            android:background="@drawable/rounded"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="424dp" />


        >

        <TextView
            android:layout_width="300dp"
            android:layout_height="26dp"
            android:layout_marginBottom="2dp"
            android:text="Usuario"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/editTextNumber"
            tools:layout_editor_absoluteX="61dp" />


        <EditText
            android:id="@+id/Nombre"
            android:layout_width="287dp"
            android:layout_height="53dp"
            android:textColor="@color/black"
            android:background="@drawable/rounded"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="554dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="159dp"
            android:layout_height="match_parent"
            android:onClick="Sesion"
            android:text="Cancelar" />

        <Button
            android:id="@+id/AceptarCuenta"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:text="Aceptar" />


    </LinearLayout>

</LinearLayout>